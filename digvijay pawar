<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Calculator</title>
</head>
<body id="parent">
<h1 id="h"></h1>
<script>


let num=+prompt("enter the seconds")
function show() {
    if(num>0)
{
    document.getElementById("h").innerHTML=num
    num--
} else{
    clearInterval(interval)
    document.getElementById("h").innerHTML="Time's Up "
}
}
let interval=setInterval(show,1000)
 </script>
</body>
</html>
